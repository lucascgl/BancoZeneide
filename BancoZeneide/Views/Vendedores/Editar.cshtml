@model BancoZeneide.Models.Vendedor

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input type="hidden" asp-for="IdVendedor" />
            <div class="form-group">
                <label asp-for="NomeVendedor" class="control-label"></label>
                <input asp-for="NomeVendedor" class="form-control" />
                <span asp-validation-for="NomeVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpfVendedor" class="control-label"></label>
                <input asp-for="CpfVendedor" class="form-control" />
                <span asp-validation-for="CpfVendedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aniversário" class="control-label"></label>
                <input asp-for="Aniversário" class="form-control" />
                <span asp-validation-for="Aniversário" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}