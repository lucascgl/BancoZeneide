@model IEnumerable<BancoZeneide.Models.Pedido>
@{
    ViewData["Title"] = "Pesquisa Simples";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Minima</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"]/>
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Máxima</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["minDate"]/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total de vendas = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PedidoId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataVenda)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Pet)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuantidadeItensComprada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ValorTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.PedidoId)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.DataVenda)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Vendedor)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Cliente)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Pet)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.QuantidadeItensComprada)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.ValorTotal)
                    </th>
                    <th>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </th>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

